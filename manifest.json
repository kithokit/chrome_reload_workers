{
  "name" : "Sniper Loader",
  "version" : "0.1",
  "description" : "Target loader to load the target thing",
  "background" : {
    "scripts": ["background.js"]
  },

  "browser_action": {
     "default_icon": "img/rifle.jpg",
     "default_popup": "popup.html" 
   },

  "permissions": [
   "tabs","<all_urls>"],

  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : ["contentscript.js"],
      "run_at" : "document_end",
      "all_frames" : true
    }
  ],
  "web_accessible_resources":[
    "jquery-1.9.1.min.js"
  ],

  "icons" : {
    "48" : "sandwich-48.png",
    "128" : "sandwich-128.png"
  },

  "manifest_version": 2
}

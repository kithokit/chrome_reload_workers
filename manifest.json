{
  "name" : "MachineGun ReLoader",
  "version" : "0.1",
  "description" : "Spawn a number of chrome tabs and keep doing refresh/reload until
  certain keyword found/not found",
  "background" : {
    "scripts": ["js/background.js"]
  },

  "browser_action": {
     "default_icon": "img/machinegun.jpg",
     "default_popup": "popup.html",
     "default_title": "MachineGun Loader"
   },

  "permissions": [
   "tabs","<all_urls>"],

  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : ["js/contentscript.js"],
      "run_at" : "document_end",
      "all_frames" : true
    }
  ],
  "web_accessible_resources":[
    "jquery-1.9.1.min.js"
  ],

  "icons" : {
    "48" : "img/machinegun.jpg",
    "128" : "img/machinegun.jpg"
  },

  "manifest_version": 2
}
